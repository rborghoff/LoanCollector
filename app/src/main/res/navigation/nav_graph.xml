<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/homeFragment2">

    <fragment
        android:id="@+id/homeFragment2"
        android:name="com.example.loancollector.ui.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home" />
    <fragment
        android:id="@+id/rateFragment"
        android:name="com.example.loancollector.ui.RateFragment"
        android:label="Rate Us"
        tools:layout="@layout/fragment_rate">
        <action
            android:id="@+id/action_rateFragment_to_ratedFragment"
            app:destination="@id/ratedFragment" />
    </fragment>
    <fragment
        android:id="@+id/ratedFragment"
        android:name="com.example.loancollector.ui.RatedFragment"
        android:label="Thank You"
        tools:layout="@layout/fragment_rated">
        <argument
            android:name="rating"
            app:argType="float" />
        <action
            android:id="@+id/action_ratedFragment_to_homeFragment2"
            app:destination="@id/homeFragment2" />
    </fragment>
    <fragment
        android:id="@+id/infoFragment"
        android:name="com.example.loancollector.InfoFragment"
        android:label="Info"
        tools:layout="@layout/fragment_info" />
</navigation>
